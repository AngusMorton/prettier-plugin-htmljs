class {
  declare state: {
    name: string;
    foo: number;
  };

  onCreate() {
    this.state = {
      name: "World",
      foo: 123,
    };
  }

  testPostPlsIgnore() {
    console.log("Hello", this.state.name, this.state.foo, "!");
  }
}

<button onclick="testPostPlsIgnore">
  Hello<span>${this.state.name + this.state.foo}!</span>
</button>
